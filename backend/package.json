  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec tsx src/server.ts",
    "build": "tsc -p .",
    "start": "npm run build && node dist/server.js",
    "setup": "tsx src/scripts/setup.ts",
    "migrate:up": "tsx src/scripts/migrate.ts up",
    "migrate:down": "tsx src/scripts/migrate.ts down",
    "seed:run": "tsx src/scripts/seed.ts run",
    "seed:clear": "tsx src/scripts/seed.ts clear",
    "db:reset": "tsx src/scripts/reset.ts",
    "consumer:outbox": "tsx src/events/consumers/outbox.ts",
    "consumer:payment": "tsx src/events/consumers/payment.ts",
    "consumer:stock": "tsx src/events/consumers/stock.ts",
    "consumer:payment-failed": "tsx src/events/consumers/paymentFailed.ts",
    "test": "NODE_ENV=test jest --runInBand",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
